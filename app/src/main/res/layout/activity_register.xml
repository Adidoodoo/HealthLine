<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:text="Register"
            android:textColor="#2E7D32"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Last Name"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputFirstName"/>

        <TextView
            android:id="@+id/errorLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="First Name"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputMiddleName"/>

        <TextView
            android:id="@+id/errorFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Middle Name"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputAddress"/>

        <TextView
            android:id="@+id/errorMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Address"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputEmail"/>

        <TextView
            android:id="@+id/errorAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Email"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputMobileNumber"/>

        <TextView
            android:id="@+id/errorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Mobile Number"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputPassword"/>

        <TextView
            android:id="@+id/errorMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Password"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:inputType="textPassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/inputConfirmPassword"/>

        <TextView
            android:id="@+id/errorPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Confirm Password"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:background="@drawable/edittext_bg_green"
            android:inputType="textPassword"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/errorConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/buttonRegisterAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:text="Register"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonLoginRedirect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#2E7D32"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>